<h2>Preferences</h2>

<em id="instruction">Select which character(s) to view</em>
<br /><br />

<% form_tag :url => {:action => :index} do %>
  <% @characters.each do |character| -%>
    <%= check_box_tag character.to_s, "is_checked", :checked => 'checked' -%><%= character.to_s %> <br />
  <% end -%>
<%= submit_tag "Update", :class => "submit" -%>
<% end -%>