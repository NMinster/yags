<%= error_messages_for 'shelf' %>

<h1>Create New Rack</h1>

<% form_for :shelf do |form| %>
    <p>
        <label for="label"><strong>Label: </strong></label>
        <%= form.text_field :label, :size => 40 %>
		<%= javascript_tag "$('shelf_label').focus()" %>
    </p>
    
    <div class="buttons">	
	<button type="submit" class="positive">
        <%= image_tag 'add.png' %>Create Rack</button>
	</div>
<% end %>