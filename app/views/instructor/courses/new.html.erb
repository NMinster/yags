<%= error_messages_for 'course' %>

<h1>Add Course</h1>

<% form_for [:instructor, @course] do |form| %>
    <p><%= form.error_messages %></p>
    <p>
      <%= form.label :name %>
      <%= form.text_field :name, :size => 40 %>
      <%= javascript_tag "$('course_name').focus()" %>
    </p>

    <div class="buttons">
      <button type="submit" class="positive">
        <%= image_tag 'add.png' %>Add Course
      </button>
    </div>
<% end %>
