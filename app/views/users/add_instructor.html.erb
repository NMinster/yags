<h1>Add Instructor</h1>

<% form_for :user do |form| %>
    <p>
      <%= form.error_messages %>
    </p>
    <p>
      <%= form.label :username %>
      <%= form.text_field :username, :size => 20 %>
      <%= javascript_tag "$('user_username').focus()" %>
    </p>
    <p>
      <%= form.label :email_address %>
      <%= form.text_field :email_address, :size => 30 %>
    </p>
    <p>
      <%= form.label :password %>
      <%= form.password_field :password, :size => 20 %>
    </p>
    <p>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, :size => 20 %>
    </p>

    <div class="buttons">
      <button type="submit" class="positive">
        <%= image_tag 'user_add.png' %>Add Instructor
      </button>
    </div>
<% end %>
