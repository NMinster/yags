<h1>Add Student</h1>

<% form_for :user do |form| %>
    <p>
      <%= form.error_messages %>
    </p>
    <p>
      <%= form.label :username %>
      <%= form.text_field :username, :size => 20 %>
      <%= javascript_tag "$('user_username').focus()" %>
    </p>
    <p>
      <%= form.label :first_name %>
      <%= form.text_field :first_name, :size => 20 %>
    </p>
    <p>
      <%= form.label :last_name %>
      <%= form.text_field :last_name, :size => 20 %>
    </p>
    <p>
      <%= form.label :email_address %>
      <%= form.text_field :email_address, :size => 30 %>
    </p>
    <p>
      <%= form.label :password %>
      <%= form.password_field :password, :size => 20 %>
    </p>
    <p>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, :size => 20 %>
    </p>
    <p>
      <%= form.label :course_id, "Course" %>
      <%= collection_select :user, :course_id, @courses, :id, :name %>
    </p>

    <div class="buttons">
      <button type="submit" class="positive">
        <%= image_tag 'user_add.png' %>Add Student
      </button>
    </div>
<% end %>
