<% if flash[:error] -%>
<div class="error"><%= flash[:error] %></div>
<% end -%>

<h1>Log In</h1>

<% form_for :user do |form| -%>
    <p>Username: <%= form.text_field :username, :size => 20 %></p>
    <p>Password: <%= form.password_field :password, :size => 20 %></p>
    <p><%= submit_tag "Login" %></p>
<% end -%>